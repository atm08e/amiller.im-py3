# SystemD Unit File for Amiller.im
[Unit]
Description=Amiller.im Web Application
After=network.target

[Service]
User=auto
Group=auto
WorkingDirectory=/home/auto/amiller.im
Environment="PATH=/home/auto/amiller.im/venv/bin"
ExecStart=/home/auto/amiller.im/venv/bin/gunicorn app.gunicorn:APP --worker-class aiohttp.worker.GunicornWebWorker --bind 127.0.0.1:5000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target